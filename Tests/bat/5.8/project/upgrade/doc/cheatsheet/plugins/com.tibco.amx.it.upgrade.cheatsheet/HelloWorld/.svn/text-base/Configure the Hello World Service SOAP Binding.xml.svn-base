<?xml version="1.0" encoding="UTF-8"?>
<cheatsheet
      title="Configure the Hello World Service SOAP Binding">
   <intro>
      <description>
         <b>Body</b>
      </description>
   </intro>
   <item
         title="Select the HelloWorldPT Service">
      <description>
         Click the <b>HelloWorldPT</b> service.
      </description>
   </item>
   <item
         title="Display and Configure Service Properties">
      <description>
        In the Properties view, click the <b>Binding</b> tab.<br/><br/>
        In the Transport Configuration area, type <b>helloConnector</b> in the Connector name field.<br/><br/>
      </description>
   </item>
   <item
         title="Save the Composite">
      <description>
         Click <b>File &gt; Save</b>.
      </description>
      <command
            required="false"
            serialization="org.eclipse.ui.file.save"/>
   </item>
</cheatsheet>
