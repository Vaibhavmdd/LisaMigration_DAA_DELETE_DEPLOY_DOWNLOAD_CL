<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.serviceModel>
       <extensions>
          <bindingElementExtensions>
            <add name="MSFTITTransport" type="com.tibco.matrix.clr.MSFTITChannel.MSFTITTransportElement, amx_msft_common" />
          </bindingElementExtensions>
          <bindingExtensions>
            <add name="MSFTITBinding" type="com.tibco.matrix.clr.MSFTITChannel.MSFTITBindingCollectionElement, amx_msft_common" />
          </bindingExtensions>
        </extensions>
        <behaviors>
            <serviceBehaviors>
                <behavior name="UndeclaredFaultServiceBehavior">
                    <serviceMetadata httpGetEnabled="true" />
                    <serviceDebug includeExceptionDetailInFaults="true" />
                </behavior>
            </serviceBehaviors>
        </behaviors>
        <services>
            <service behaviorConfiguration="UndeclaredFaultServiceBehavior"
                name="UndeclaredFault.SoapException1PTImpl">
                <endpoint address="UnDeclaredFault" binding="customBinding"
                    bindingConfiguration="AMX" contract="SoapException1PT" />
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost:9057" />
                    </baseAddresses>
                </host>
            </service>
        </services>
        <bindings>
            <basicHttpBinding>
              <binding name="SOAPEventSourceBinding">
              </binding>
            </basicHttpBinding>
            
          <customBinding>
	       <binding name="AMX">
	           <textMessageEncoding />
	             <MSFTITTransport/>
	       </binding>
          </customBinding> 
            
        </bindings>
        <client>
            <endpoint address="http://SPIDERMAN:2424/Service/Service_unDeclaredFaultDoc"
                binding="customBinding" bindingConfiguration="AMX"
                contract="SoapException1PT" name="SOAPEventSource" />
        </client>
    </system.serviceModel>
</configuration>