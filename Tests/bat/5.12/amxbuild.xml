<project default="setup.oracle11g.driver">
	<import file="${TIBCO_AMX_LIBRARY}/bin/amx-macrodefs.xml" />
	
	<target name="setup.oracle11g.driver">
		<upload.daa dataFile="${amxConfigFile}" />
  		<!-- provision the oracle 11g driver first -->
        <enable.feature dataFile="${amxConfigFile}" />
        <reprovision.Node dataFile="${amxConfigFile}" />
     </target>
	
	<target name="create.sr">
		<create.rt dataFile="${amxConfigFile}"  />
		<create.ri dataFile="${amxConfigFile}"  />
		<install.ri dataFile="${amxConfigFile}"  />
	</target>

	<target name="deploy.app">
		
		<create.app dataFile="${amxConfigFile}" />
		<add.app.svars dataFile="${amxConfigFile}" />
		<map.app.to.node dataFile="${amxConfigFile}"  />	
		<deploy.app dataFile="${amxConfigFile}" />
	</target>
	
	<target name="restart.app">
		<stop.app dataFile="${amxConfigFile}"  />
		<start.app dataFile="${amxConfigFile}"  />
	</target>		
	
	<target name="undeploy.app">
		<undeploy.app dataFile="${amxConfigFile}" />
	<!--	<delete.app dataFile="${amxConfigFile}"  />
		
		<uninstall.ri dataFile="${amxConfigFile}"  />
		<delete.ri dataFile="${amxConfigFile}"   />
	
	    <remove.apptemplate dataFile="${amxConfigFile}"/>	        		
	    <remove.feature dataFile="${amxConfigFile}" /> -->
	</target>
	
</project>

