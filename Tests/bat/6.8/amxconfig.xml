<?xml version="1.0" encoding="UTF-8"?>

<amxdata_base:Enterprise
	xmlns:amxdata="http://tibco.com/amxadministrator/command/line/types"
	xmlns:amxdata_base="http://tibco.com/amxadministrator/command/line/types_base"
	xmlns:amxdata_reference="http://tibco.com/amxadministrator/command/line/types_reference"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://tibco.com/amxadministrator/command/line/types_base ../schemas/amxdata_base.xsd http://tibco.com/amxadministrator/command/line/types ../schemas/amxdata.xsd">
	<Environment xsi:type="amxdata:Environment" 
	       name="[[env.name]]" 
	       description="Dev environment" 
	       contact="TIBCO">
		<Node xsi:type="amxdata:Node" name="[[env.node1.name]]" hostName="[[host.name]]" description="QA Node1" contact="TIBCO"> 		
		   <ResourceInstance xsi:type="amxdata:ResourceInstance" name="httpConnector68" resourceTemplateName="httpConnector68RT"/>		
		</Node> 

		<!-- =========================Application for  bat6.8 ===================== -->	
		<Application
			xsi:type="amxdata:Application"
			name="bat68_app"
			contact="TIBCO Software Inc."
			description="bat68_app">	
			<Component xsi:type="amxdata:Component" name="MediationComp">
		        <Node name="[[env.node2.name]]" environmentName="[[env.name]]"/>
			</Component>
		<PromotedService xsi:type="amxdata_base:Service_base" name="CreditCardService">
			<Binding xsi:type="amxdata:Binding" name="SOAPService_Binding1" >
           <Node name="[[env.node1.name]]" environmentName="[[env.name]]" />
			</Binding>
		</PromotedService>
		<PromotedReference xsi:type="amxdata_base:Reference_base" name="EJBBTReference">
			<Binding xsi:type="amxdata:Binding" name="EJBReference_Binding1" >          
           <Property xsi:type="amxdata:Property" name="EjbReferenceBindingContextURL" value="jnp://[[JBOSSServerForEJBBT]]:[[JBOSSPortForEJBBT]]"/>
			</Binding>			
		</PromotedReference>		
			<ApplicationTemplate xsi:type="amxdata_reference:ApplicationTemplate_reference" name="BAT68"/>
		</Application>
	</Environment>

	<ResourceTemplate xsi:type="amxdata:HttpConnectorResourceTemplate" name="httpConnector68RT" host="localhost" port="9968" headerBufferSize="512" requestBufferSize="512"	responseBufferSize="512" maxIdleTime="200000" lowResourceMaxIdleTime="512" description="This is HttpConnector RT for BAT6.8"/>

	<!-- DAA for BAT68 -->
	<DAA
		xsi:type="amxdata:DAA"
		description="DAA AppNameSDR"
		location="./BAT68_SOA/BAT68/Deployment Artifacts/BAT68.daa"
	        importResourceTemplates="true">
	</DAA>
</amxdata_base:Enterprise>
